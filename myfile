pipeline{
 agent{
  node{
   label "nodejs"
  }
 }
stages{
  stage('Build'){
    steps{
     echo "Building"
    }
  }
  stage('Test'){
    steps{
     echo "Testing"
    }
  }
  stage('Deploy'){
    steps{
     echo "Deploying"
    }
  }
}
post{
  always{
   echo "Always say hi again"
  }
  success{
   echo "Say hi when success"
  }
  failure{
   echo "say no hi when failure"
  }
}
}
